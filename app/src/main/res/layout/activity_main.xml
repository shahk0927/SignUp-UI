<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lets_start_fitx"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/rl"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcomeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginBottom="10dp"
            android:text="@string/welcome_to_fitx"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/startJourneyTv"
            android:textColor="#000000"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/startJourneyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvNext"
            android:layout_gravity="bottom"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/lets_start_your_journey"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNext"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btndesign"
            android:clickable="true"
            android:gravity="center"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:focusable="true"
            app:drawableStartCompat="@drawable/ic_baseline_arrow_forward_24" />

    </RelativeLayout>

</RelativeLayout>